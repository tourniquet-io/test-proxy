<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %-5p [%t] %C::%M() %m%n"/>
        </Console>
    </Appenders>
    <loggers>
        <Logger name="io.tourniquet.proxy" level="debug"/>
        <root level="info">
            <appender-ref ref="STDOUT"/>
        </root>
    </loggers>
</Configuration>
